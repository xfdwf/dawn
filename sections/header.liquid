    {%- render 'cross-border' -%}

    {%- if secondary_menu != blank -%}
      <div class="menu__items menu__items--secondary">
        {%- for link in linklists[secondary_menu].links limit: 4 -%}
          {%- render 'nav-item', link: link, section: section, index: forloop.index, link_hover_dot: link_hover_dot, nav_secondary: true -%}
        {%- endfor -%}
      </div>
    {%- endif -%}

    {%- if settings.show_header_search -%}
      {%- render 'search-popdown', unique: 'desktop', in_header: true, classes: 'menu__item menu__item--icon', summary_classes: summary_classes, header_icons_as_text: header_icons_as_text, section:section -%}
    {%- endif -%}

    {%- if shop.customer_accounts_enabled -%}
      <div class="menu__item menu__item--icon">
      {%- if customer -%}
        <a href="{{ routes.account_url }}"  class="navlink navlink--icon{% if settings.nav_caps_toplevel %} caps{% endif %}{% if link_hover_dot %} navlink--dot{% endif %}">
          <span class="visually-hidden">{{ 'general.accessibility.my_account' | t }}</span>
          {%- if header_icons_as_text -%}
            <span class="navtext">{{ 'layout.customer.account' | t }}</span>
          {%- else -%}
            {%- render 'icon-user' -%}
          {%- endif -%}
        </a>
      {%- else -%}
        <span class="navlink navlink--icon menu-item-account-icon">
          {%- render 'icon-user' -%}
          <div class="account-modal" style="top: {{header_height | round}}px;">
            <a href="{{ routes.account_url }}" alt="" class="account-modal-signin">SIGN IN</a>
            <a href="/account/register" alt="" class="account-modal-create">CREATE AN ACCOUNT</a>
          </div>
        </span>
      {%- endif -%}

      
      </div>
    {%- endif -%}

    <div class="menu__item menu__item--icon">
      <a href="{{ routes.cart_url }}" class="cart-icon-cus navlink navlink--icon cart__toggle{% if cart.item_count > 0 %} cart__toggle--has-items{% endif %}{% if cart_animation %} cart__toggle--animation{% endif %}{% if settings.nav_caps_toplevel %} caps{% endif %}{% if link_hover_dot %} navlink--dot{% endif %}" aria-controls="cart-drawer" aria-expanded="false"{% unless template.name == 'cart' or settings.cart_type == 'page' %} data-cart-drawer-toggle{% endunless %}>

        <div class="cart-icon-count-sty cart-icon-count-pc">{{cart.item_count}}</div>
        <span class="visually-hidden">{{ 'general.accessibility.open_cart' | t }}</span>
        {%- if header_icons_as_text -%}
          <span class="navtext">{{ 'layout.cart.title' | t }}</span>
        {%- else -%}
          {{ cart_icon }}
        {%- endif -%}
      </a>
    </div>
  </div>
</nav>

<div class="mobile-menu" data-mobile-menu>
  

  {%- if settings.show_header_search -%}
    {%- render 'search-popdown', unique: 'mobile', in_header: true, classes: 'mobile-menu__button caps', section:section -%}
  {%- endif -%}

  <a href="{{ routes.cart_url }}"
    class="cart-icon-cus mobile-menu__button cart__toggle{% if cart.item_count > 0 %} cart__toggle--has-items{% endif %}{% if cart_animation %} cart__toggle--animation{% endif %}"
