      "type": "checkbox",
      "id": "sticky_header",
      "label": "Enable sticky header",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "header_border",
      "label": "Show bottom border",
      "default": false
    },
    {
      "type": "select",
      "label": "Link hover effect",
      "id": "link_hover_effect",
      "default": "dot",
      "options": [
        { "label": "Line", "value": "line" },
        { "label": "Dot", "value": "dot" }
      ]
    },
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo_not_home",
      "label": "Image",
      "info": "Used on the other pages and on scroll when the header is sticky"
    },
    {
      "type": "range",
      "id": "logo_max_width",
      "label": "Width",
      "min": 30,
      "max": 250,
      "default": 100,
      "step": 10,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
