{%- render 'list-collections', section_buttons: true -%}

{% schema %}
  {
    "name": "Buttons list",
    "class": "buttons-list",
    "max_blocks": 12,
    "settings": [
      {
        "type": "header",
        "content": "Layout"
      },
      {
        "type": "select",
        "id": "layout",
        "label": "Layout",
        "default": "grid",
        "options": [
          { "value": "grid", "label": "Grid" },
          { "value": "carousel", "label": "Carousel" }
        ]
      },
      {
        "type": "select",
        "id": "alignment",
        "label": "Alignment",
        "default": "center",
        "options": [
          { "value": "left", "label": "Left" },
          { "value": "center", "label": "Center" }
        ]
      },
      {
        "type": "range",
        "id": "collections_per_row",
        "label": "Buttons per row",
        "min": 2,
        "max": 6,
        "step": 1,
        "default": 6
      },
      {
        "type": "header",
        "content": "Heading"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Text"
      },
      {
        "type": "range",
        "id": "heading_size",
        "label": "Size",
        "default": 100,
        "min": 50,
        "max": 200,
        "step": 5,
        "unit": "%"
      },
      {
        "type": "header",
        "content": "Buttons"
      },
      {
        "type": "select",
        "label": "Font",
        "id": "type_style",
        "default": "button-typography",
        "options": [
          { "label": "Heading", "value": "font-heading" },
          { "label": "Body", "value": "font-body" },
          { "label": "Accent", "value": "subheading-text" },
          { "label": "Button", "value": "button-typography" }
        ]
      },
      {
        "type": "select",
        "id": "button_style",
        "label": "Style",
        "options": [
          {"label": "Square", "value": "square"},
          {"label": "Rounded", "value": "rounded"},
          {"label": "Pill", "value": "pill"}
        ],
        "default": "rounded"
      },
      {
        "type": "range",
        "id": "text_size",
        "label": "Text size",
        "default": 115,
        "min": 75,
        "max": 200,
        "step": 5,
        "unit": "%"
      },
      {
        "type": "range",
        "id": "letter_spacing",
        "label": "Letter spacing",
        "default": 75,
        "min": -25,
        "max": 200,
        "unit": "%",
        "step": 25
      },
      {
        "type": "header",
        "content": "Colors"
      },
      {
        "type": "color",
        "id": "section_bg_color",
        "label": "Background"
      },
      {
        "type": "color",
        "id": "section_text_color",
        "label": "Text"
      },
      {
        "type": "header",
        "content": "Mobile layout"
      },
      {
        "type": "select",
        "id": "layout_mobile",
        "label": "Mobile layout",
        "default": "grid",
        "options": [
          { "value": "grid", "label": "2 per row" },
          { "value": "carousel", "label": "Carousel" }
        ]
      },
      {
        "type": "header",
        "content": "Section spacing"
      },
      {
        "type": "select",
        "id": "width",
        "label": "Width",
        "default": "wrapper--full-padded",
        "options": [
          { "value": "wrapper--full-padded", "label": "Full width padded" },
          { "value": "wrapper", "label": "Page width" }
        ]
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Padding top",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Padding bottom",
        "default": 0
      }
    ],
    "blocks": [
      {
        "type": "button",
        "name": "Button",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Text",
            "default": "Button"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Link"
          },
          {
            "type": "image_picker",
            "id": "custom_collection_image",
            "label": "Image"
          },
          {
            "type": "range",
            "id": "overlay_opacity",
            "label": "Overlay opacity",
            "min": 0,
            "max": 100,
            "step": 5,
            "unit": "%",
            "default": 100
          },
          {
            "type": "header",
            "content": "Color overrides"
          },
          {
            "type": "color",
            "id": "block_text_color",
            "label": "Text"
          },
          {
            "type": "color",
            "id": "bg_color",
            "label": "Background"
          },
          {
            "type": "color",
            "id": "border_color",
            "label": "Border"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Buttons list",
        "category": "Buttons",
        "blocks": [
          {
            "type": "button"
          },
          {
            "type": "button"
          },
          {
            "type": "button"
          },
          {
            "type": "button"
          },
          {
            "type": "button"
          },
          {
            "type": "button"
          }
        ]
      }
    ],
    "disabled_on": {
      "groups": ["header","aside","footer"]
    }
  }
{% endschema %}
