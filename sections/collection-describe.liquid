<style>
  @media screen and (max-width:767px) {
    .content-box--text-describe-sty{
      padding: 10px 5vw;
    }
    .product-facet__meta-bar-item--count {
      display: none!important;
    }
    .product-facet {
      margin-top: 0!important;
    }
    .collection-description-wrap p{
      display: none;
    }
    .collection-description-wrap p:first-child {
      display: -webkit-box;
      -webkit-box-orient: vertical;
