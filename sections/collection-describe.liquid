    <div class="container vertical-breather">
      <div class="content-box content-box--medium content-box--text-describe-sty content-box--center text-container">
        <h3 class="heading h2">{{ collection.title }}</h3>
        <div class="collection-description-wrap">{{- collection.description -}}</div>
      </div>
    </div>
  </div>
{%- endif -%}

