{% capture powered_by_link %} {{ 'footer.powered_by' | t }} <a href="https://www.shopify.com/" rel="noopener" target="_blank" rel="nofollow">Shopify</a>.{% endcapture %}
{%- assign bottom_menu = section.settings.bottom_menu -%}

<div class="footer-copyright">
  <ul  class="footer-copyright__content" style=" display: flex; list-style: none; padding: 0; margin:0;">
    <li style="margin-right:30px;"><a href="/pages/privacy-policy" title="">Privacy Policy</a></li>
    <li style="margin-right:30px;"><a href="/pages/terms-conditions" title="">Terms & Conditions</a></li>
    <li><span class="footer-copyright__copy">&copy; {{ 'now' | date: "%Y" }} {{ shop.name | link_to: routes.root_url }}</span></li>
    {% comment %} <span class="footer-copyright__powered">{{ powered_by_link }}</span> {% endcomment %}
  </ul>

  {%- if bottom_menu != blank and linklists[bottom_menu].links.size > 0 -%}
    <div class="footer-copyright__menu">
      {% for link in linklists[bottom_menu].links %}
        <a href="{{ link.url }}" class="footer-copyright__link">{{ link.title | strip_html | escape }}</a>
      {% endfor %}
    </div>
  {%- endif -%}
</div>